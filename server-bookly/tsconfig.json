{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom","es6"],
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["**/**/*.ts", "environment.d.ts"]
}
